{
  "compilerOptions": {
    "assumeChangesOnlyAffectDirectDependencies": true,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "declaration": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "composite": true,
    "lib": [
      "esnext"
    ],
    "module": "CommonJS",
    "moduleResolution": "node",
    "noImplicitThis": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "rootDirs": [
      "src/",
      "abi/"
    ],
    "target": "es6",
  },
  "include": [
    "src/index.ts",
    "src/types/contracts/**/*.ts",
    "src/types/factories/contracts/**/*.ts",
    "src/types/common.ts",
    "abi/**/*.json"
  ],
}
